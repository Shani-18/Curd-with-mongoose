<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head.ejs') %>
</head>
<body>
    <%- include('includes/navigation-menu.ejs') %>
    <main>
    <% if(alert){%>
    <%- include("includes/alerts.ejs")%>
    <%}%>
    <div class="container my-5">

        <form action="/shopping/delete-category" method="post">
        <div class="row">
            <div class="col-md-5">
                    <label  class="form-label">
                        Category :
                    </label>
                    <select class="form-control" name="deletingCategoryID">
                        <option>--Select--</option>
                        <% for(let category of categories) {%>
                            <option value="<%= category._id %>"><%= category.title %></option>
                        <% } %>
                    </select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-5 mt-3">
                    <p>
                        <%if(categories.length>0){%>
                            <button class="btn btn-primary">Delete</button>
                        <%}else{%>
                            <button class="btn btn-primary disabled">Delete</button>
                        <%}%>
                    </p>
            </div>
        </div>
    </form>
    </div>
</main>
<%- include('includes/footer.ejs') %>
<%- include('includes/end.ejs') %>