
<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head.ejs') %>
    <style>
      ul{
        list-style-type: none;
      }
    </style>
</head>
<body>
<%- include('includes/navigation-menu.ejs') %>
    <main>
      <div class="container mb-3">
        <div class="row ">
          <div class="col-md-6 mx-auto">
            <form action="/accounts/signup" method="post" class="form-signin" novalidate>
              <img class="mb-4 ms-auto w-100 text-center" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
              <h1 class="h3 mb-3 font-weight-normal text-center">Sign Up Form</h1>
              <label for="firstName" class="sr-only">First name</label>
              <p>
                <input type="text" id="firstName" name="firstName" class="form-control" placeholder="First name" required autofocus>
              </p>
              <p class="text-danger"><small><%= errors.firstNameError%></small></p>
              <label for="lastName" class="sr-only">Last name</label>
              <p>
                <input type="text" id="lastName" name="lastName" class="form-control" placeholder="Last name" autofocus>
              </p>
              <p class="text-danger"><small><%= errors.lastNameError%></small></p>
              <label for="email" class="sr-only">Email address</label>
              <p>
                <input type="email" id="email" name="email" class="form-control" placeholder="Email address" required autofocus>
              </p>
              <p class="text-danger">
                  <%for(let error of errors.emailErrors){%>
                    <span><small><%= error.msg%> &nbsp;</small></span>
                  <%}%>
              </p>
              <label for="password" class="sr-only">Password</label>
              <p>
                <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
              </p>
              <p class="text-danger"><small><%= errors.passwordError%></small></p>
              <p>Already Register? then <a href="/accounts/signin"> Login</a></p>
              <button class="btn btn-primary btn-block w-100 fw-bold" type="submit">Sign up</button>
            </form>
          </div>
        </div>
      </div>
    </main>

<%- include('includes/footer.ejs') %>
<%- include('includes/end.ejs') %>